<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo_android"
            android:id="@+id/ftPerfil"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Olá,"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/txtUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Usuário"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seja Bem-vindo"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Painel de Acompanhamento"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Escolha uma atividade para registrar e visualizar"
        android:textSize="15dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/Cinza"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:gravity="center"
        >

        <!-- BOTÃO DE ALIMENTAÇÃO -->
        <LinearLayout
            android:layout_width="175dp"
            android:layout_height="160dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/editbordamenu"
            android:clickable="true"
            android:focusable="true"
            android:padding="12dp"
            android:backgroundTint="@color/corFundo"
            android:id="@+id/btAlimentacao"
            android:layout_marginRight="5dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:src="@drawable/logo_alimentacao"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alimentação"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registre e agende as refeições"
                android:textSize="9dp"
                android:textColor="@color/CinzaFonteMenu"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                />
        </LinearLayout>


        <!-- BOTÃO DE VACINAS -->
        <LinearLayout
            android:layout_width="175dp"
            android:layout_height="160dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/editbordamenu"
            android:clickable="true"
            android:focusable="true"
            android:padding="12dp"
            android:backgroundTint="@color/corFundo"
            android:id="@+id/btVacina"
            android:layout_marginLeft="5dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:src="@drawable/logo_vacinas"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vacinas"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acompanhe o calendário de vacinação"
                android:textSize="9dp"
                android:textAlignment="center"
                android:textColor="@color/CinzaFonteMenu"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                />
        </LinearLayout>
</LinearLayout>


    <!-- BOTOES 3 E 4 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:gravity="center"
        >

        <!-- BOTÃO DE SONO -->
        <LinearLayout
            android:layout_width="175dp"
            android:layout_height="160dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/editbordamenu"
            android:clickable="true"
            android:focusable="true"
            android:padding="12dp"
            android:backgroundTint="@color/corFundo"
            android:id="@+id/btSono"
            android:layout_marginRight="5dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:src="@drawable/logo_sono"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sono"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monitore os ciclos de sono"
                android:textSize="9dp"
                android:textColor="@color/CinzaFonteMenu"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                />
        </LinearLayout>


        <!-- BOTÃO DE CONSULTAS -->
        <LinearLayout
            android:layout_width="175dp"
            android:layout_height="160dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/editbordamenu"
            android:clickable="true"
            android:focusable="true"
            android:padding="12dp"
            android:backgroundTint="@color/corFundo"
            android:id="@+id/btConsultas"
            android:layout_marginLeft="5dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:src="@drawable/logo_consulta"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Consultas"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registre consultas médicas"
                android:textSize="9dp"
                android:textAlignment="center"
                android:textColor="@color/CinzaFonteMenu"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                />
        </LinearLayout>
    </LinearLayout>


    <!-- BOTOES 5 E 6 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:gravity="center"
        >

        <!-- BOTÃO DE FRAUDAS -->
        <LinearLayout
            android:layout_width="175dp"
            android:layout_height="160dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/editbordamenu"
            android:clickable="true"
            android:focusable="true"
            android:padding="12dp"
            android:backgroundTint="@color/corFundo"
            android:id="@+id/btFrauda"
            android:layout_marginRight="5dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:src="@drawable/logo_frauda"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fraudas"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monitore os ciclos de sono"
                android:textSize="9dp"
                android:textColor="@color/CinzaFonteMenu"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                />
        </LinearLayout>


        <!-- BOTÃO DE MENU -->
        <LinearLayout
            android:layout_width="175dp"
            android:layout_height="160dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/editbordamenu"
            android:clickable="true"
            android:focusable="true"
            android:padding="12dp"
            android:backgroundTint="@color/corFundo"
            android:id="@+id/btMenu"
            android:layout_marginLeft="5dp"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:src="@drawable/logo_menu"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personalize seu perfil"
                android:textSize="9dp"
                android:textAlignment="center"
                android:textColor="@color/CinzaFonteMenu"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
