<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="9dp"
    android:background="@drawable/editbordamenu"
    android:padding="12dp"
    android:elevation="4dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/txt_data_fralda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dd/mm/aaaa"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:textColor="@android:color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Ícone à esquerda -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/logo_frauda"
            android:layout_marginEnd="10dp" />

        <!-- Bloco de textos (Tipo e Hora) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_tipo_frauda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Urina"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txt_hora_fralda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>

        <!-- Quantidade à direita -->
        <TextView
            android:id="@+id/txt_qtd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7x"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="end" />


    </LinearLayout>
    <ImageView
        android:id="@+id/btLixeiraFr"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/lixeira"
        android:gravity="end"
        android:layout_marginTop="15dp"
        android:layout_marginStart="8dp"/>
</LinearLayout>
